<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppThemeToolbar</item>
        <item name="android:textViewStyle">@style/IranianSansFontStyle</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="IranianSansFontStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/selector_bottom_sheet_dialog_fragment</item>
        <item name="android:textViewStyle">@style/IranianSansFontStyle</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="AutoCompleteStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AutoCompleteStyleTickets" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/blue_bg</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="rippleStyle">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="scheduleTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_tab_background</item>
    </style>

    <style name="simpleDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="ReportDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ReportDialogAnimation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ReportDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>


    <style name="AppBaseTheme.GrayAccent">
        <item name="colorAccent">#7f8c8d</item>
    </style>

    <style name="AppTheme.Tablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">#00E4CB</item>
        <item name="tabIndicatorColor">#00E4CB</item>
    </style>

    <style name="GenderRadioButton">
        <item name="android:background">@drawable/selector_bg_cat_article_card</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="VeryGoodRadioButton">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@null</item>
    </style>


    <style name="MadresePlus_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_madreseplus_btn</item>
        <item name="android:textColor">@drawable/selector_madreseplus_btn_txt</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ReportDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_report_dialog_btn</item>
        <item name="android:textColor">@drawable/selector_madreseplus_btn_txt</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="4dp"
    android:layoutDirection="rtl"
    style="@style/rippleStyle"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_artCommonLayout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_all" />

    <TextView
        android:id="@+id/txtView_catName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/imageView_artCommonLayout"
        android:layout_toRightOf="@id/txtView_date_artCommonLayout"
        android:text="ریاضیات"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/txtView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/imageView_artCommonLayout"
        android:layout_alignBottom="@id/imageView_artCommonLayout"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="آموزش تمرینات بخش اول"
        android:textSize="@dimen/font_12" />


    <TextView
        android:id="@+id/txtView_date_artCommonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        tools:text="1398/12/22"
        android:textSize="@dimen/font_12" />

    <!--<Button
        android:id="@+id/btn_save_artCommonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/imageView_artCommonLayout"
        android:backgroundTint="#00E4CB"
        android:drawableRight="@drawable/ic_save_white"
        android:text="ذخیره" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@color/gray" />
</RelativeLayout>
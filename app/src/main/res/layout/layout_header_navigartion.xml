<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_navContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_header_nav_boy"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/rl_header_nav"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/selector_bg_haeder_avatart_boy">

            <ImageView
                android:id="@+id/imgView_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_margin="24dp"
                android:src="@drawable/ic_avatar_boy" />

            <TextView
                android:id="@+id/txtView_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgView_avatar"
                android:layout_toLeftOf="@id/imgView_avatar"
                android:text="سیما حسینی"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/txtView_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_userName"
                android:layout_toLeftOf="@id/imgView_avatar"
                android:text="دوازدهم (تجربی)"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/txtView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_degree"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/imgView_avatar"
                android:text="09123333333"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/imgView_avatar"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_edit"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_header_nav"
            android:layout_marginTop="54dp">

            <LinearLayout
                android:id="@+id/ln_headerMenus_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_userGuide_headerNav"
                    style="@style/rippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_help_usage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:text="@string/usage_guide"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>

                <!--<LinearLayout
                    android:id="@+id/ln_saved_headerNav"
                    style="@style/rippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_saved" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:text="ذخیره شده ها"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ln_aboutMp_headerNav"
                    style="@style/rippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_logo_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:text="@string/about_mp_plus"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_callToSupport_headerNav"
                    style="@style/rippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_contact_us" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:text="@string/call_to_support"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>

                <!--<LinearLayout
                    android:id="@+id/ln_accountDetail_headerNav"
                    style="@style/rippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_info_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:text="اطلاعات اشتراک خریداری شده"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@id/ln_exitAccount_headerNav"
                android:background="@color/white" />


            <LinearLayout
                android:id="@+id/ln_exitAccount_headerNav"
                style="@style/rippleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_exit_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:text="خروج از حساب"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</merge>